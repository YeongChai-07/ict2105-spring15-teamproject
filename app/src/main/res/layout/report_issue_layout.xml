<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/enter_IssueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_report_issue_Name"
        android:lines = "1"
        android:layout_alignParentTop="true" />
    <EditText
        android:id="@+id/enter_IssueLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_report_issue_Location"
        android:lines = "1"
        android:layout_below="@id/enter_IssueName"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <TextView
        android:id="@+id/textview_urgencyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_report_issue_urgency"
        android:layout_below="@id/enter_IssueLocation"/>
    <Spinner
        android:id="@+id/spinner_urgencyPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textview_urgencyLevel"
        android:layout_below="@id/enter_IssueLocation"
        android:entries="@array/issue_urgency_array"/>



    <Button
        android:id="@+id/button_captureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_capture_image"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spinner_urgencyPicker"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <ImageView
        android:id="@+id/issue_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_captureImage"
        android:layout_marginTop="@dimen/image_top_margin" />


    <EditText
        android:id="@+id/multiLine_Description"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue_Image"
        android:inputType="textMultiLine"
        android:ems="10"/>
    <Button
    android:id="@+id/button_submitIssue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/button_submit_issue"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/multiLine_Description"/>
</RelativeLayout>
</ScrollView>