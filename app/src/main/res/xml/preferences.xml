<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Your Contact">
        <EditTextPreference
            android:key="name_preference"
            android:summary="Please provide your name"
            android:title="Name"
            android:singleLine="true" />

        <EditTextPreference
            android:key="email_preference"
            android:summary="Please provide your email address"
            android:title="Email address"
            android:inputType="textEmailAddress" />

        <EditTextPreference
            android:key="contact_preference"
            android:summary="Please provide your contact number"
            android:title="Contact number"
            android:inputType="phone" />
    </PreferenceCategory>

</PreferenceScreen>